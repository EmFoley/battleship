<% 
  @page_css = "game"
  @js_manifest = "backbone/battleship" 
%>
<button class="fire-missile" rel="fire-missile">Fire Missile!</button>

<div class="main"></div>

<% content_for :javascript do %>
  <%= javascript_tag do %>
    jQuery(function($){
      Battleship.start({
       coordinates: <%= raw @active_gameboard.to_json %>
      });
    });
  <% end %>
<% end %>
